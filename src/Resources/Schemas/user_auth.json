{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://api/users/auth",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 5,
      "maxLength": 64
    },
    "password": {
      "type": "string",
      "minLength": 8,
      "maxLength": 20
    }
  },
  "required": [
    "email",
    "password"
  ],
  "additionalProperties": false
}